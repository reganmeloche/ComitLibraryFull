@model ComitLibrary.Models.Book

<div>
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Author</dt>
        <dd class="col-sm-9">@Model.Author</dd>

        <dt class="col-sm-3">Is Checked Out</dt>
        <dd class="col-sm-9">@Model.IsCheckedOut</dd>

        <dt class="col-sm-3">Year</dt>
        <dd class="col-sm-9">@Model.Year</dd>

    </dl>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit Book</a>
    </div>
    <br/>

    <div>
    @if (!Model.IsCheckedOut) {
        <a class="btn btn-success" asp-controller="Loan" asp-action="Create" asp-route-id="@Model.Id">Checkout</a>
        <form asp-action="Delete" style="display:inline">
            <input type="hidden" asp-for="Id"/>
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
    
    } else {
        <a class="btn btn-warning" asp-controller="Loan" asp-action="Return" asp-route-id="@Model.Id">Return</a>
    }
    </div>

    <hr/>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>
